{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "storm-worker-controller1",
    "labels": {
      "name": "storm-worker1"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "storm-worker1"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "storm-worker1",
          "uses": "nimbus"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "storm-worker1",
            "image": "kevin2333/storm-worker",
            "ports": [
              {
                "name": "w6700",
                "containerPort": 6700
              },
              {
                "name": "w6701",
                "containerPort": 6701
              },
              {
                "name": "w6702",
                "containerPort": 6702
              },
              {
                "name": "w6703",
                "containerPort": 6703
              }
            ],
            "resources": {
              "limits": {
                "cpu": "800m"
              }
            }
          }
        ]
      }
    }
  }
}
